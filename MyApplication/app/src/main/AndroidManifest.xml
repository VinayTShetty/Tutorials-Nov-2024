<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--
           ============================================================
           PERMISSIONS SECTION
           ============================================================

           These permissions must be declared here BEFORE requesting
           them at runtime.

           âš ï¸ Important:
           - Declaring a permission in the Manifest DOES NOT mean
             the permission is granted.
           - The user must still approve it through the runtime dialog.
       -->
    <!-- ðŸ“¸ CAMERA PERMISSION -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!-- ðŸ“ LOCATION PERMISSIONS -->
    <!-- Fine location (GPS-level accuracy) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--
        Optional:
        Coarse location is automatically granted when fine is granted,
        but you may explicitly declare it for clarity:
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>